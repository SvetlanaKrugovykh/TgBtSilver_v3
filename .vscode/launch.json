{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug dev:api",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "runtimeExecutable": "nodemon", // Uncomment this line for Nodemon
      "runtimeArgs": [
        "--inspect"
      ], // Add this line for Node.js or Nodemon
      "program": "${workspaceFolder}/index.js",
      "restart": true, // Add this line for Nodemon
      "console": "integratedTerminal" // Add this line for Nodemon
    }
  ]
}